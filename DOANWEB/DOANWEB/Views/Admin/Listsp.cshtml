@model IEnumerable<DOANWEB.Models.SanPham>
@{
    ViewBag.Title = "Listsp";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Quản Lý Sản Phẩm</h2>>
<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th> Mã loại </th>
        <th> Tên sách</th>
        <th> Hình </th>
        <th> Giá bán</th>
        <th> Ngày cập nhật </th>
        <th> Số lượng tồn</th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@Html.DisplayFor(modelItem => item.maloaisp)</td>
            <td>@Html.DisplayFor(modelItem => item.tensp)</td>
            <td><img src="@item.hinh" alt="hinh thumbnail" /></td>
            <td>@Html.DisplayFor(modelItem => item.giaban)</td>
            <td>@Html.DisplayFor(modelItem => item.ngaycapnhat)</td>
            <td>@Html.DisplayFor(modelItem => item.soluongton)</td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.masp}) |
                @Html.ActionLink("Detail", "Detail", new { id = item.masp }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.masp })
            </td>
        </tr>
    }
</table>

<div>
    @Html.ActionLink("Back to List", "Index", "Admin")
</div>