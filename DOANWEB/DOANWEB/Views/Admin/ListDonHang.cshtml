@model IEnumerable<DOANWEB.Models.DONHANG>
@{
    ViewBag.Title = "ListDonHang";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Quản Lý Đơn Hàng</h2>

<table class="table">
    <tr>
        <th> Mã Đơn </th>
        <th> Thanh Toán</th>
        <th> Giao Hàng </th>
        <th> Ngày Đặt</th>
        <th> Ngày Giao </th>
        <th> Mã Khách Hàng</th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@Html.DisplayFor(modelItem => item.MaDon)</td>
            <td>@Html.DisplayFor(modelItem => item.ThanhToan)</td>

            <td>@Html.DisplayFor(modelItem => item.GiaoHang)</td>
            <td>@Html.DisplayFor(modelItem => item.NgayDat)</td>
            <td>@Html.DisplayFor(modelItem => item.NgayGiao)</td>
            <td>@Html.DisplayFor(modelItem => item.MaKH)</td>

        </tr>
    }
</table>

<div>
    @Html.ActionLink("Back to List", "Index", "Admin")
</div>